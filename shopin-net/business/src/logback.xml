<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<property name="log.home" value="../logs" />
	<property name="log.name" value="shopin" />
	<jmxConfigurator />
	<!-- perf4j监控  start-->
	<appender name="CoalescingStatistics"
        class="org.perf4j.logback.AsyncCoalescingStatisticsAppender">
        <param name="TimeSlice" value="1" />        
        <appender-ref ref="perf4jFileAppender" />       
    </appender>
    
    <appender name="perf4jFileAppender"
        class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${log.home}/perf4j.log</File>
        <encoder>
            <Pattern>%date %-5level [%thread] %logger{36} [%file:%line] %msg%n
            </Pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${log.home}/perf4j.%d{yyyy-MM-dd}.log</FileNamePattern>
        </rollingPolicy>
    </appender>
    
    <logger name="org.perf4j.TimingLogger" additivity="false">
        <level value="DEBUG" />
        <appender-ref ref="CoalescingStatistics" />
        <appender-ref ref="perf4jFileAppender" />
        <appender-ref ref="stdout" />
    </logger>
	<!-- perf4j监控  end -->
	
	<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>[%5level]-"%msg"-%logger{80}[%thread][%date]%n</pattern>
		</layout>
	</appender>

	<appender name="logfile" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<Encoding>UTF-8</Encoding>
		<File>${log.home}/${log.name}.log</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>${log.home}/${log.name}.%d{yyyy-MM-dd}.log.zip</FileNamePattern>
		</rollingPolicy>
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>%date [%thread] %-5level %logger{80} - %msg%n</pattern>
		</layout>
	</appender>
	
	<logger name="net.shopin">
		<level value="INFO" />
	</logger>

    <logger name="net.shopin.service">
		<level value="INFO" />
	</logger>
    <logger name="net.shopin.util">
		<level value="ERROR" />
	</logger>
    
    <logger name="net.sf.json">
       <level value="ERROR"/>
    </logger>

    <logger name="ch.qos">
		<level value="ERROR" />
	</logger>

    <logger name="com.mchange">
		<level value="WARN" />
	</logger>

    <logger name="com.google">
		<level value="WARN" />
	</logger>

	<logger name="org.springframework">
		<level value="WARN" />
	</logger>

	<logger name="org.hibernate">
		<level value="WARN" />
	</logger>

	<logger name="org.hibernate.SQL">
		<level value="ERROR" />
	</logger>

    <logger name="org.hibernate.cache">
		<level value="ERROR" />
	</logger>
    
    <logger name="freemarker.cache">
		<level value="ERROR" />
	</logger>

    <logger name="org.apache.cxf.interceptor.LoggingInInterceptor" additivity="false">
		<level value="INFO" />
        <appender-ref ref="stdout" />
	</logger>

    <logger name="org.apache.cxf.interceptor.LoggingOutInterceptor" additivity="false">
		<level value="INFO" />
        <appender-ref ref="stdout" />
	</logger>

	<root>
		<level value="WARN" />
		<appender-ref ref="stdout" />
        <!--
		<appender-ref ref="logfile" />
		-->
	</root>
</configuration>

