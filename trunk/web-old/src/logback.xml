<?xml version="1.0" encoding="UTF-8"?>

<configuration>
	<substitutionProperty name="log.home" value="../logs" />
	<substitutionProperty name="log.name" value="shopin-web" />

	<jmxConfigurator />

	<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>%date [%thread] %-5level %logger{80} - %msg%n</pattern>
		</layout>
	</appender>

	<appender name="logfile" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<Encoding>UTF-8</Encoding>
		<File>${log.home}/${log.name}.log</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>${log.home}/${log.name}.%d{yyyy-MM-dd}.log.zip</FileNamePattern>
		</rollingPolicy>
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>%date [%thread] %-5level %logger{80} - %msg%n</pattern>
		</layout>
	</appender>
	
	<logger name="net.shopin.web">
		<level value="INFO" />
	</logger>

    <logger name="com.mchange">
		<level value="WARN" />
	</logger>

    <logger name="ch.qos">
		<level value="ERROR" />
	</logger>

    <logger name="com.google">
		<level value="WARN" />
	</logger>

	<logger name="org.springframework">
		<level value="WARN" />
	</logger>

	<logger name="org.hibernate">
		<level value="WARN" />
	</logger>

	<logger name="org.hibernate.SQL">
		<level value="ERROR" />
	</logger>

	<logger name="org.hibernate.cache">
		<level value="ERROR" />
	</logger>
    
	<root level="WARN">
		<appender-ref ref="stdout" />
		<appender-ref ref="logfile" />
	</root>
</configuration>

