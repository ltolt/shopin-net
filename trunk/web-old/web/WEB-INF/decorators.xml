<?xml version="1.0" encoding="UTF-8"?>

<decorators defaultdir="/decorators">
    <excludes>
        <pattern>/css/*</pattern>
        <pattern>/js/*</pattern>
        <pattern>/images/*</pattern>
        <pattern>/flash/*</pattern>
        <pattern>/lianmeng/*</pattern>
    </excludes>
    <decorator name="main" page="main.jsp">
        <pattern>/*</pattern>
    </decorator>
    <decorator name="act" page="act.jsp">
        <pattern>/act/*</pattern>
    </decorator>
    <decorator name="blank" page="blank.jsp">
        <pattern>/action/*</pattern>
    </decorator>
    <decorator name="extend" page="extend.jsp">
        <pattern>/extend/*</pattern>
    </decorator>

</decorators>